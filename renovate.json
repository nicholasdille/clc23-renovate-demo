{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:recommended"
    ],
    "prHourlyLimit": 0,
    "prConcurrentLimit": 0,
    "pinDigests": true,
    "dependencyDashboard": true,
    "packageRules": [
        {
            "matchUpdateTypes": [ "digest", "patch", "pin", "pinDigest" ],
            "automerge": true
        }
    ]
  }